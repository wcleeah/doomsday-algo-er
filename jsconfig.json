{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noEmit": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "nodenext",
    "paths": {
        "@types": ["./index.d.ts"]
    }
  },
  "include": ["*.js", "**/*.js", "index.d.ts"],
  "exclude": ["node_modules", "dist"]
}

